<Window x:Class="WPF.API.System_.Windows.Controls.Layout.DockPanelDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DockPanelDemo" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- DockPanel：定义一个区域，从中可以按相对位置水平或垂直排列各个子元素 -->
        <!-- https://learn.microsoft.com/zh-cn/dotnet/api/system.windows.controls.dockpanel -->
        <DockPanel>
            <TextBox DockPanel.Dock="Top" Height="30" BorderBrush="Black"/>
            <TreeView DockPanel.Dock="Left" Width="100" BorderBrush="Black"></TreeView>
            <ListView BorderBrush="Black"></ListView>
        </DockPanel>
    </Grid>
</Window>
