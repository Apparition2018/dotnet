<Window x:Class="WPF.API.System_.Windows.Controls.ToolBarDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ToolBarDemo" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <ToolBar DockPanel.Dock="Top" Height="32">
                <Button>
                    <Image Source="/Common/Images/save.png"/>
                </Button>
                <Button>
                    <Button.Content>
                        <Image Source="/Common/Images/new.png"/>
                    </Button.Content>
                </Button>
                <CheckBox>
                    <CheckBox.Content>
                        <Image Source="/Common/Images/auto-save.png"/>
                    </CheckBox.Content>
                </CheckBox>
                <TextBox/>
            </ToolBar>
            <TextBox DockPanel.Dock="Bottom"/>
        </DockPanel>
    </Grid>
</Window>
