<Window x:Class="WPF_Demo.API.System_.Windows.Controls.RadioButtonDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="RadioButtonDemo" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Common/DemoStyleRD.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <!-- GroupName：获取或设置指定哪些 RadioButton 控件互斥的名称 -->
        <RadioButton GroupName="Interest" Content="足球" Margin="300,130,0,0"/>
        <RadioButton GroupName="Interest" Content="篮球" Margin="300,160,0,0"/>
        <RadioButton GroupName="Interest" Content="排球" Margin="300,190,0,0"/>

        <RadioButton GroupName="Gender" Content="男" Margin="460,130,0,0"/>
        <RadioButton GroupName="Gender" Content="女" Margin="460,160,0,0"/>
        <RadioButton GroupName="Gender" Content="不限" Margin="460,190,0,0"/>
    </Grid>
</Window>
