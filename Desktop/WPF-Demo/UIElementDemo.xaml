<Window x:Class="WPF_Demo.UIElementDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Demo"
        mc:Ignorable="d"
        Title="UIElementDemo" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Common/DemoStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Button x:Name="ljh" Content="LJH" Margin="380,100,0,0" Width="40"/>
        <Button x:Name="BtnVisibility" Content="Visibility" Margin="350,150,0,0" Click="BtnVisibility_Click"/>
        <Button x:Name="BtnIsEnabled" Content="IsEnabled" Margin="350,200,0,0" Click="BtnIsEnabled_Click"/>
        <Button x:Name="BtnBackgroud" Content="Background" Margin="350,250,0,0" Click="BtnBackgroud_Click"/>
        <Button x:Name="BtnFontSize" Content="FontSize" Margin="350,300,0,0" Click="BtnFontSize_Click"/>
    </Grid>
</Window>
