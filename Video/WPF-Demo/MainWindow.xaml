<!-- Window         提供创建、配置、显示和管理窗口和对话框的生存期的能力 -->
<!-- x:Class        配置 XAML 标记编译，以在标记和代码隐藏之间联接分部类 -->
<!-- xlmns          XML Namespace 的缩写，默认命名空间，包含了 WPF 中大多数控件和类的定义 -->
<!-- xlmns:x        XAML 命名空间，包含了 XAML 语言本身的特性和属性，如 x:Classs、x:Key、x:Name 等 -->
<!-- xlmns:d        Blend 设计命名空间，包含了一些列用于设计时的属性和元素，如 d:DesignHeight、d:DesignWidth、d:DataContext 等 -->
<!-- xlmns:mc       标记兼容性命名空间，用于促进不同版本的 XAML 之间的兼容性和可移植性 -->
<!-- xlmns:local    本地命名空间，允许您引用项目或程序集中的类 -->
<!-- mc:Ingorable   允许在运行时可以安全忽略的 XML 命名空间前缀 -->
<Window x:Class="WPF_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Demo"
        mc:Ignorable="d"
        Title="WPF-Demo" Height="450" Width="800">
    <Grid>

    </Grid>
</Window>
