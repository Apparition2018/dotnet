<Window x:Class="WPF_Demo.WindowsControls.CanvasDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Demo.WindowsControls"
        mc:Ignorable="d"
        Title="CanvasDemo" Height="200" Width="320" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Canvas：定义一个区域，可在其中使用相对于 Canvas 区域的坐标以显式方式来定位子元素 -->
        <!-- https://learn.microsoft.com/zh-cn/dotnet/api/system.windows.controls.canvas -->
        <Canvas Margin="10">
            <Label x:Name="labelLogin" Content="用户名：" Canvas.Left="25" Canvas.Top="25"/>
            <TextBox x:Name="txtLoginId" Canvas.Left="90" Canvas.Top="25" Height="25" Width="150" VerticalContentAlignment="Center"/>
            <Label x:Name="labelPwd" Content="密码：" Canvas.Left="36.5" Canvas.Top="60"/>
            <PasswordBox x:Name="txtLoginPwd" Canvas.Left="90" Canvas.Top="60" Height="25" Width="150" VerticalContentAlignment="Center"/>
            <Button x:Name="btnLogin" Content="登录" Canvas.Left="75" Canvas.Bottom="15" Width="60"/>
            <Button x:Name="btnExit" Content="关闭" Canvas.Right="75" Canvas.Bottom="15" Width="60"/>
        </Canvas>        
    </Grid>
</Window>
